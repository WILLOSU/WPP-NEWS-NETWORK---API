{
  "openapi": "3.0.0",
  "info": {
    "title": "WPP NEWS API Documentation",
    "description": "Nesta documentação você poderá consultar e testar todos os endpoints da API. Lembre-se de registrar e realizar a autorização (login) para acessar rotas protegidas.",
    "contact": {
      "email": "seuemail@exemplo.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://willnews-api.onrender.com",
      "description": "Render Server (Produção)"
    },
    {
      "url": "http://localhost:5173",
      "description": "Local Server (Desenvolvimento)"
    }
  ],
  "tags": [
    {
      "name": "Autenticação",
      "description": "Rotas para registro e login de usuários."
    },
    {
      "name": "Usuários",
      "description": "Rotas para gestão de perfis de usuário."
    },
    {
      "name": "Notícias",
      "description": "Rotas para criação, visualização, atualização e moderação de notícias."
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Cria um novo usuário",
        "description": "Permite o registro de um novo usuário na plataforma.",
        "tags": ["Usuários"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRequest"
              },
              "examples": {
                "Novo Usuário": {
                  "value": {
                    "name": "João Silva",
                    "username": "joao.silva",
                    "email": "joao.silva@email.com",
                    "password": "senhaSegura123",
                    "avatar": "https://i.imgur.com/avatar.png",
                    "background": "https://images.wallpapersden.com/image.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "user": { "$ref": "#/components/schemas/UserResponse" }
                  }
                }
              }
            }
          },
          "400": { "description": "Campos obrigatórios ausentes" },
          "409": { "description": "Email ou nome de usuário já cadastrado" },
          "500": { "description": "Erro interno do servidor" }
        }
      },
      "get": {
        "summary": "Lista todos os usuários (APENAS ADMIN)",
        "description": "Retorna uma lista de todos os usuários registrados. Requer token de administrador.",
        "tags": ["Usuários"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserResponse"
                  }
                }
              }
            }
          },
          "401": { "description": "Não autorizado (token inválido/ausente)" },
          "403": { "description": "Acesso negado (não é administrador)" },
          "400": { "description": "Nenhum usuário encontrado" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "summary": "Busca usuário por ID",
        "description": "Retorna os detalhes de um usuário específico. Requer autenticação.",
        "tags": ["Usuários"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID do Usuário",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "401": { "description": "Não autorizado" },
          "400": { "description": "ID inválido ou usuário não encontrado" },
          "500": { "description": "Erro interno do servidor" }
        }
      },
      "patch": {
        "summary": "Atualiza parcialmente um usuário (Dono ou Admin)",
        "description": "Permite a atualização parcial dos dados de um usuário. O usuário só pode atualizar seu próprio perfil; administradores podem atualizar qualquer perfil (inclusive o papel).",
        "tags": ["Usuários"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID do Usuário a ser atualizado",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserUpdate"
              },
              "examples": {
                "Atualizar Nome e Avatar": {
                  "value": {
                    "name": "Thiago Lima Atualizado",
                    "avatar": "https://nova-imagem.jpg"
                  }
                },
                "Alterar Papel (APENAS ADMIN)": {
                  "value": {
                    "role": "admin"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Usuário atualizado com sucesso" },
          "401": { "description": "Não autorizado" },
          "403": { "description": "Acesso negado (não é dono ou admin)" },
          "400": { "description": "Campos inválidos" },
          "409": { "description": "Email ou nome de usuário já cadastrado" },
          "500": { "description": "Erro interno do servidor" }
        }
      },
      "delete": {
        "summary": "Desativa um usuário (Soft Delete - Dono ou Admin)",
        "description": "Muda o status do usuário para 'inativo'. O usuário pode desativar a si mesmo; administradores podem desativar qualquer usuário.",
        "tags": ["Usuários"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID do Usuário a ser desativado",
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "Usuário desativado com sucesso" },
          "401": { "description": "Não autorizado" },
          "403": { "description": "Acesso negado (não é dono ou admin)" },
          "400": { "description": "ID inválido" },
          "404": { "description": "Usuário não encontrado" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/auth": {
      "post": {
        "summary": "Login de Usuário",
        "description": "Realiza o login de um usuário e retorna um token JWT para acesso autenticado.",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" }
                },
                "required": ["email", "password"]
              },
              "examples": {
                "Credenciais de Login": {
                  "value": {
                    "email": "joao.silva@email.com",
                    "password": "senhaSegura123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" },
                    "user": { "$ref": "#/components/schemas/UserResponse" }
                  }
                }
              }
            }
          },
          "400": { "description": "Credenciais inválidas" },
          "403": { "description": "Token inválido/expirado" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news": {
      "post": {
        "summary": "Cria uma nova notícia",
        "description": "Permite criar uma nova notícia. Usuários comuns criam notícias como 'pendente'. Administradores podem criar como 'publicado'.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewsRequest"
              },
              "examples": {
                "Nova Notícia": {
                  "value": {
                    "title": "Minha Nova Notícia",
                    "text": "Conteúdo da minha notícia a ser criada.",
                    "banner": "https://example.com/banner-nova-noticia.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Notícia criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "news": { "$ref": "#/components/schemas/NewsResponse" }
                  }
                }
              }
            }
          },
          "401": { "description": "Não autorizado" },
          "400": { "description": "Campos obrigatórios ausentes" },
          "500": { "description": "Erro interno do servidor" }
        }
      },
      "get": {
        "summary": "Lista todas as notícias publicadas",
        "description": "Retorna uma lista paginada de notícias com status 'publicado'. Não requer autenticação.",
        "tags": ["Notícias"],
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "schema": { "type": "integer" },
            "description": "Número máximo de notícias por página",
            "required": false
          },
          {
            "in": "query",
            "name": "offset",
            "schema": { "type": "integer" },
            "description": "Número de notícias a pular (para paginação)",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nextUrl": { "type": "string", "nullable": true },
                    "previousUrl": { "type": "string", "nullable": true },
                    "limit": { "type": "integer" },
                    "offset": { "type": "integer" },
                    "total": { "type": "integer" },
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/NewsResponse"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Nenhuma notícia publicada encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/top": {
      "get": {
        "summary": "Busca a notícia mais popular/recente publicada",
        "description": "Retorna a notícia mais recente (assumindo que 'popular' é a mais recente). Não requer autenticação.",
        "tags": ["Notícias"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewsResponse"
                }
              }
            }
          },
          "404": { "description": "Nenhuma notícia encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/search": {
      "get": {
        "summary": "Busca notícias por título",
        "description": "Retorna notícias com status 'publicado' que correspondem ao título pesquisado. Não requer autenticação.",
        "tags": ["Notícias"],
        "parameters": [
          {
            "in": "query",
            "name": "title",
            "schema": { "type": "string" },
            "description": "Título da notícia para buscar",
            "required": true
          },
          {
            "in": "query",
            "name": "limit",
            "schema": { "type": "integer" },
            "description": "Número máximo de notícias por página",
            "required": false
          },
          {
            "in": "query",
            "name": "offset",
            "schema": { "type": "integer" },
            "description": "Número de notícias a pular (para paginação)",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nextUrl": { "type": "string", "nullable": true },
                    "previousUrl": { "type": "string", "nullable": true },
                    "total": { "type": "integer" },
                    "limit": { "type": "integer" },
                    "offset": { "type": "integer" },
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/NewsResponse"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Nenhuma notícia encontrada com o título" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/byUser": {
      "get": {
        "summary": "Lista notícias por ID de usuário (Dono)",
        "description": "Retorna todas as notícias criadas pelo usuário autenticado (incluindo pendentes/rejeitadas/inativas). Requer autenticação.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/NewsResponse"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Não autorizado" },
          "400": { "description": "Nenhuma notícia encontrada para este usuário" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/{id}": {
      "get": {
        "summary": "Busca notícia por ID",
        "description": "Retorna os detalhes de uma notícia específica. Notícias 'publicadas' são visíveis a todos. Notícias 'pendentes'/'rejeitadas'/'inativas' são visíveis apenas ao autor ou a um administrador.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID da Notícia",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewsResponse"
                }
              }
            }
          },
          "401": { "description": "Não autorizado" },
          "403": { "description": "Acesso negado (não publicada ou sem permissão)" },
          "404": { "description": "Notícia não encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      },
      "patch": {
        "summary": "Atualiza parcialmente uma notícia (Dono ou Admin)",
        "description": "Permite a atualização parcial dos dados de uma notícia. O autor pode editar o conteúdo; administradores podem editar o conteúdo E alterar o status.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID da Notícia a ser atualizada",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewsUpdate"
              },
              "examples": {
                "Atualizar Conteúdo": {
                  "value": {
                    "title": "Novo Título da Notícia",
                    "text": "Novo texto para a notícia."
                  }
                },
                "Alterar Status (APENAS ADMIN)": {
                  "value": {
                    "status": "published"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Notícia atualizada com sucesso" },
          "401": { "description": "Não autorizado" },
          "403": { "description": "Acesso negado (não é dono, admin, ou tenta alterar status sem permissão)" },
          "400": { "description": "Campos inválidos" },
          "404": { "description": "Notícia não encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      },
      "delete": {
        "summary": "Desativa uma notícia (Soft Delete - Dono ou Admin)",
        "description": "Muda o status da notícia para 'inativo'. O autor pode inativar sua própria notícia; administradores podem inativar qualquer notícia.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID da Notícia a ser inativada",
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "Notícia inativada com sucesso" },
          "401": { "description": "Não autorizado" },
          "403": { "description": "Acesso negado (não é dono ou admin)" },
          "400": { "description": "ID inválido" },
          "404": { "description": "Notícia não encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/moderate/{id}": {
      "patch": {
        "summary": "Modera o status de uma notícia (APENAS ADMIN)",
        "description": "Altera o status de uma notícia para 'pending', 'published' ou 'rejected'. Requer token de administrador.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID da Notícia a ser moderada",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["pending", "published", "rejected"],
                    "description": "Novo status da notícia"
                  }
                },
                "required": ["status"]
              },
              "examples": {
                "Publicar Notícia": {
                  "value": { "status": "published" }
                },
                "Rejeitar Notícia": {
                  "value": { "status": "rejected" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Status da notícia atualizado com sucesso" },
          "400": { "description": "Status inválido" },
          "401": { "description": "Não autorizado" },
          "403": { "description": "Acesso negado (não é administrador)" },
          "404": { "description": "Notícia não encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/hard/{id}": {
      "delete": {
        "summary": "Exclui uma notícia permanentemente (APENAS ADMIN)",
        "description": "Remove uma notícia do banco de dados de forma definitiva. **Esta ação é irreversível.** Requer token de administrador.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID da Notícia a ser excluída permanentemente",
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "Notícia excluída permanentemente com sucesso" },
          "401": { "description": "Não autorizado" },
          "403": { "description": "Acesso negado (não é administrador)" },
          "404": { "description": "Notícia não encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/like/{id}": {
      "patch": {
        "summary": "Curte/Descurte uma Notícia",
        "description": "Permite curtir ou descurtir uma notícia. Se o usuário já curtiu, o like é removido; caso contrário, é adicionado. Requer autenticação.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID da Notícia",
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "Like adicionado/removido com sucesso" },
          "401": { "description": "Não autorizado" },
          "400": { "description": "ID inválido" },
          "404": { "description": "Notícia não encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/comment/{id}": {
      "patch": {
        "summary": "Comenta em uma Notícia",
        "description": "Adiciona um comentário a uma notícia. Requer autenticação.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": { "type": "string" },
            "description": "ID da Notícia",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "comment": { "type": "string", "description": "O texto do comentário" }
                },
                "required": ["comment"]
              },
              "examples": {
                "Adicionar Comentário": {
                  "value": { "comment": "Que notícia interessante!" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Comentário adicionado com sucesso" },
          "401": { "description": "Não autorizado" },
          "400": { "description": "Comentário vazio ou ID inválido" },
          "404": { "description": "Notícia não encontrada" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/news/comment/{idNews}/{idComment}": {
      "delete": {
        "summary": "Deleta um comentário",
        "description": "Remove um comentário de uma notícia. O autor do comentário ou um administrador pode deletar. Requer autenticação.",
        "tags": ["Notícias"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "idNews",
            "schema": { "type": "string" },
            "description": "ID da Notícia",
            "required": true
          },
          {
            "in": "path",
            "name": "idComment",
            "schema": { "type": "string" },
            "description": "ID do Comentário",
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "Comentário removido com sucesso" },
          "401": { "description": "Não autorizado" },
          "403": { "description": "Acesso negado (não é autor ou admin)" },
          "400": { "description": "ID inválido" },
          "404": { "description": "Notícia ou comentário não encontrado" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Usuário Teste" },
          "username": { "type": "string", "example": "test.user" },
          "email": { "type": "string", "format": "email", "example": "teste@email.com" },
